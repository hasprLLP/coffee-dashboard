{
    "_comment": "Module to Declare Path to Folders",
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/styles/*": ["styles/*"],
        "@/components/*": ["src/components/*"],
        "@/utilities/*": ["src/utilities/*"],
        "@/helpers/*": ["src/helpers/*"],
        "@/blocks/*": ["src/blocks/*"],
        "@/tables/*": ["src/tables/*"],
        "@/pages/*": ["pages/*"],
        "@/global/*": ["src/global/*"],
        "@/page/*": ["src/page/*"],
        "@/functions/*": ["src/backend/node/*"],
        "@/firebase/*": ["src/backend/firebase/*"],
      }
    },
    "exclude": ["node_modules", "out"]
  }